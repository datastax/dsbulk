<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>binary-distro</id>

  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>

    <fileSet>
      <directory>${project.basedir}</directory>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>../manual</directory>
      <includes>
        <include>README.md</include>
        <include>application.template.conf</include>
        <include>settings.md</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>${project.build.directory}/webDocs</directory>
      <outputDirectory>manual/webDocs</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>../bin</directory>
    </fileSet>

    <fileSet>
      <directory>${project.build.directory}/apidocs</directory>
      <outputDirectory>apidocs</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>${project.basedir}/src/conf</directory>
      <outputDirectory>conf</outputDirectory>
    </fileSet>

  </fileSets>

  <dependencySets>

    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
      <excludes>
        <!-- Guava dependency that must be kept during build, but can be discarded now -->
        <exclude>org.codehaus.mojo:animal-sniffer-annotations*</exclude>
        <!-- do not include source jars here -->
        <exclude>com.datastax.*:*:jar:sources:*</exclude>
      </excludes>
    </dependencySet>

  </dependencySets>

</assembly>
